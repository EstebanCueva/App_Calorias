<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="App_Calorias.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:App_Calorias"
    Shell.FlyoutBehavior="Flyout"
    Title="App_Calorias">
    <FlyoutItem>
        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

        <ShellContent
        Title="Crear Usuario"
        ContentTemplate="{DataTemplate local:CrearUsuarioPageNEW}"
        Route="CrearUsuarioPage" />
        <ShellContent
        Title="Usuario"
        ContentTemplate="{DataTemplate local:UsuariosPage}"
        Route="UsuarioPage" />

        <ShellContent
            Title="Crear Dieta"
            ContentTemplate="{DataTemplate local:CrearDietaPage}"
            Route="CrearDietaPage" />

        <ShellContent
            Title="Dietas"
            ContentTemplate="{DataTemplate local:DietasPage}"
            Route="DietasPage" />

    </FlyoutItem>

</Shell>